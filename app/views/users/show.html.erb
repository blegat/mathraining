              ctx.fillText("<%= "#{0 if month < 10}#{month}/#{year-2000}" %>", pct*<%= date_x %>, pct*471);
              <% last_date_x = date_x %>
            <% end %>
          <% end %>
        }
        
        if (pct > 0.7){
          ctx.textAlign = 'right';
          <% i = max_num_corr %>
          <% step = max_num_corr / 10 %>
          <% fac = 1 %>
          <% while step >= 10 %>
            <% fac = fac * 10 %>
            <% step = step / 10 %>
          <% end %>
          <% if step < 1 %>
            <% step = 1 %>
          <% elsif step < 2 %>
            <% step = 2 %>
          <% elsif step < 5 %>
            <% step = 5 %>
          <% else %>
            <% step = 10 %>
          <% end %>
          <% step = step * fac %>
          <% while(i > 0) %>
            ctx.fillText("<%= i %>", pct*43,pct*(<%= 455-450*i/maxi %>+4));
            <% i = i - step %>
            <% mod = i % step %>
            <% if mod != 0 %>
              <% i = i + step - mod %>
              <% if mod < step * 0.2 %> 
                <% i = i - step %>
              <% end %>
            <% end %>
          <% end %>
        }
        
        }

        //Initial call
        respondCanvas();

        });
      </script>
