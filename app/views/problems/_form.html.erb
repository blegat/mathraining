<%= render 'shared/error_messages', object: f.object %>

<!-- Enoncé -->
<div class="mb-2">
  <%= f.label "Énoncé", :for => "MathInput", :class => "form-label" %>
  <%= render 'shared/preview' %>
  <%= render 'shared/font' %>
  <%= f.text_area :statement, :class => "form-control", :maxlength => "8000", :style => "height:200px;", :id => "MathInput" %>
  <script>initAndUpdatePreviewWhenPossible()</script>
</div>
  
<!-- Origine -->
<div class="mb-2">
  <%= f.label :origin, :class => "form-label" %> (laisser blanc si d'origine inconnue)
  <%= f.text_field :origin, :class => "form-control", :maxlength => "255", :style => "max-width:500px;", :placeholder => "Exemple : International Mathematical Olympiad 2030, Problème 1" %>
</div>

<!-- Niveau -->
<% if !problem.nil? && problem.online %>
  <p>Niveau (entre 1 et 5) : <b><%= problem.level %></b></p>
<% else %>
  <div class="mb-2">
  <%= f.label :level, :class => "form-label" %>
  <%= f.number_field :level, :class => "form-control", :style => "width:70px;", :min => 1, :max => 5 %>
  </div>
<% end %>
