<% end %>
</div>

<div class="font">
  <%= link_to "Mes images", pictures_path, :target => "_blank", :class => "align-middle" %> - <%= link_to "Nouvelle image", new_picture_path, :target => "_blank", :class => "align-middle" %>
</div>

<div class="font">
<div class="form-check">
<label class="form-check-label ms-2 me-2 align-middle">
