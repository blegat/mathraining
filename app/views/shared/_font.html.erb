<a href="javascript:Insert.insert('<u>', '</u>', 'MathInput');" class='ms-1'><%= image_tag "underlined.svg", :class => "svg-black-white", :title => "Souligné" %></a>
<a href="javascript:Insert.insert('<h4>', '</h4>', 'MathInput');" class='ms-3'><%= image_tag "title.svg", :class => "svg-black-white", :title => "Sous-titre" %></a>
<a href="javascript:Insert.insert('<hr>', '', 'MathInput');"><%= image_tag "line.svg", :class => "svg-black-white", :title => "Séparateur horizontal" %></a>
